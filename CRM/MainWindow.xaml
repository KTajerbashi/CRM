<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        x:Class="CRM.MainWindow"
        mc:Ignorable="d"
        x:Name="mainwindow"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        
        Title="MainWindow" Height="720" Width="1280">
    <Border BorderBrush="#FF8ED3ED" BorderThickness="5" CornerRadius="10">
        <Grid Background="#FF8ED3ED">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="12" Grid.RowSpan="2" BorderBrush="White" BorderThickness="5" CornerRadius="10" Margin="10">
                <Rectangle Fill="White"  />
            </Border>
            <Image Grid.Column="10" Grid.ColumnSpan="2" Source="/Image/LOGO 1.png" Margin="29,12,28,12" Grid.RowSpan="2"/>
            <Image Grid.Column="0" Grid.ColumnSpan="1" Source="/Image/ShutDown.Png" Margin="16,15,57,15" Height="30" Grid.RowSpan="2"/>
            <Image Grid.Column="0" Source="/Image/User.ico" Margin="54,15,16,15" Height="30"  Grid.RowSpan="2"/>
            <hc:SearchBar Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" FontFamily="IRANSansWeb" VerticalAlignment="Center" Width="295" />
            <Border Grid.ColumnSpan="3" Grid.Column="9" Grid.RowSpan="10" Grid.Row="2" BorderBrush="#00171F" BorderThickness="5" CornerRadius="10" Margin="10">
                <Rectangle Fill="#00171F"  />
            </Border>
            <Border Grid.ColumnSpan="3" Grid.Column="3" Grid.RowSpan="3" Grid.Row="2" BorderBrush="#FFFFFF" BorderThickness="5" CornerRadius="10" Margin="10">
                <Rectangle Fill="#FFFFFF"  />
            </Border>
            <Border Grid.ColumnSpan="3" Grid.Column="6" Grid.RowSpan="3" Grid.Row="2" BorderBrush="#02115D" BorderThickness="5" CornerRadius="10" Margin="10">
                <Rectangle Fill="#02115D"  />
            </Border>
            <Border Grid.ColumnSpan="3" Grid.Column="0" Grid.RowSpan="3" Grid.Row="2" BorderBrush="#FFFFFF" BorderThickness="5" CornerRadius="10" Margin="10">
                <Rectangle Fill="#FFFFFF"  />
            </Border>
            <Border Grid.ColumnSpan="3" Background="#FFFFFF" Margin="10" Grid.Column="6" Grid.RowSpan="6" Grid.Row="5" BorderBrush="#FFFFFF" BorderThickness="5" CornerRadius="10" />
            <Border Grid.ColumnSpan="3" Grid.Column="6" Grid.RowSpan="1" Grid.Row="11" BorderBrush="#FFFFFF" BorderThickness="5" CornerRadius="10" Margin="10">
                <Rectangle Fill="#FFFFFF"  />
            </Border>
            <Border Grid.ColumnSpan="6" Grid.Column="0" Grid.RowSpan="7" Grid.Row="5" BorderBrush="#02115D" Background="#02115D" BorderThickness="5" CornerRadius="10" Margin="10"/>
            <hc:PersianCalendar Grid.Column="6" Grid.Row="5" Grid.ColumnSpan="3" Grid.RowSpan="6"/>
            <local:ClockMainWindow  Grid.ColumnSpan="3" Grid.Column="6" Grid.Row="11"/>

            <TextBlock Grid.RowSpan="2" Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="6" Text="تعداد مشتریان" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="35" FontWeight="Bold" FontFamily="IRANSansWeb Light" Foreground="#EBEBEB" Margin="0,16,0,0"/>
            <TextBlock Grid.RowSpan="2" Grid.Row="3" Grid.Column="6" Height="100" Width="150" Text="5001" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="72" FontWeight="Bold" FontFamily="B Davat" Foreground="#EBEBEB" Grid.ColumnSpan="2" Margin="23,4,0,0"/>
            <Image Grid.RowSpan="3" Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="2" Height="100" Width="100" Source="/Image/Users.png" Margin="42,42,20,3" />

            <TextBlock Grid.RowSpan="2" Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="3" Text="فروش های امروز" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="35" FontWeight="Bold" FontFamily="IRANSansWeb Light" Foreground="#02115D" Margin="0,16,0,0"/>
            <TextBlock Grid.RowSpan="2" Grid.Row="3" Grid.Column="3" Height="100" Width="150" Text="105" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="72" FontWeight="Bold" FontFamily="B Davat" Foreground="#02115D" Grid.ColumnSpan="2" Margin="23,4,0,0"/>
            <Image Grid.RowSpan="3" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Height="100" Width="100" Source="/Image/Dollor Icon.png" Margin="42,42,20,3" />

            <TextBlock Grid.RowSpan="2" Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="0" Text="یاد آور" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="35" FontWeight="Bold" FontFamily="IRANSansWeb Light" Foreground="#02115D" Margin="0,16,0,0"/>
            <TextBlock Grid.RowSpan="2" Grid.Row="3" Grid.Column="0" Height="100" Width="150" Text="50" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="72" FontWeight="Bold" FontFamily="B Davat" Foreground="#02115D" Grid.ColumnSpan="2" Margin="23,4,0,0"/>
            <Image Grid.RowSpan="3" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Height="100" Width="100" Source="/Image/Reminder icon.png" Margin="42,42,20,3" />


        </Grid>
    </Border>
</Window>
